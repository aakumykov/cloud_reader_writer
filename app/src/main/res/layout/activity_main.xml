<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/yandexAuthButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ED5E32"
        android:text="Авторизоваться в Яндекс" />

    <EditText
        android:id="@+id/absolutePathInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="/a/b/c" />

    <Button
        android:id="@+id/createDirButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Создать папку 1" />

    <EditText
        android:id="@+id/relativePathInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="qwe/rty" />

    <Button
        android:id="@+id/createDirButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Создать папку 2" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/errorView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f00000"
        android:visibility="gone"
        tools:text="OLLlNBKA"
        tools:visibility="visible" />


</LinearLayout>