<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/yandexAuthButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ED5E32"
            android:text="Авторизоваться в Яндекс" />

        <EditText
            android:id="@+id/dirNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Имя папки"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/createCloudDirButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#66BB6A"
                android:text="Создать облачную папку" />

            <Button
                android:id="@+id/checkCloudDirExistsButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:backgroundTint="#66BB6A"
                android:text="?" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/createLocalDirButton1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Создать локальную папку" />

            <Button
                android:id="@+id/checkLocalDirExistsButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:text="?" />

        </LinearLayout>

        <ToggleButton
            android:id="@+id/cloudTypeToggleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="ToggleButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textOff="Локальное &quot;облако&quot;"
            android:textOn="Яндекс.Диск" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/selectFileButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFA726"
                android:text="Выбрать файл"
                app:icon="@drawable/ic_select_file"
                app:iconGravity="textStart" />

            <Button
                android:id="@+id/uploadFileButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#66BB6A"
                android:text="Отправить"
                app:icon="@drawable/ic_upload"
                app:iconGravity="textEnd" />

            <Button
                android:id="@+id/checkUploadedFileButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:backgroundTint="#66BB6A"
                android:text="?" />

        </LinearLayout>


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/errorView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#f00000"
            android:visibility="gone"
            tools:text="OLLlNBKA"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/infoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:text="NYoloPMAU,UR"
            tools:visibility="visible" />


    </LinearLayout>

</ScrollView>